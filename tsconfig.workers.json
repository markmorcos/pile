{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "jsx": "react",
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "server.ts",
    "src/workers/**/*.ts",
    "src/workers/**/*.tsx",
    "src/lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "src/lib/firebase/client.ts"
  ]
}
